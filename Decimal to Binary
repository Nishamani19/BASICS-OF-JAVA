import java.util.*;
import java.util.Scanner;

class Main 
{
    public static void main(String[]args)
    {
        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        StringBuffer s = new StringBuffer();
         while(a!=0)
         {
             int k=a%2;
             s.append(k);
             a/=2;
         }
         System.out.print(s.reverse());
    }
}
